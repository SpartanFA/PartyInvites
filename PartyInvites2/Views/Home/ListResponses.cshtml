@model  IEnumerable<PartyInvites2.Models.GuestResponse>
@{
    ViewData["Title"] = "ListResponses";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responses</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <div class="panel-body">
        <h2>List of party people:</h2>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Arrival Time</th>
                    <th>Request Parking</th>
                </tr>
            </thead>
            <tbody>
                @foreach (PartyInvites2.Models.GuestResponse r in Model)
                {
                <tr>
                    <td>@r.Name</td>
                    <td>@r.Age</td>
                    <td>@r.ArrivalTime</td>
                    <td>@r.WillAttend</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="nav-divider">
        <p>Click <a asp-action="Index">here</a> to invite more friends!</p>
    </div>
</body>
</html>
