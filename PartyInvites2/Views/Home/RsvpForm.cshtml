@model  PartyInvites2.Models.GuestResponse
@{
    ViewData["Title"] = "RsvpForm";
}
    
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <div class="panel-success"></div>
    <div class="panel-heading text-center"><h4>RSVP</h4></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="RsvpForm" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <p>
                    <label asp-for="Name">Your name:</label>
                    <input class="form-control" asp-for="Name" />
                </p>
            </div>
            <div class="form-group">
                <p>
                    <label asp-for="Age">Your age:</label>
                    <input class="form-control" asp-for="Age" />
                </p>
            </div>
            <div class="form-group">
                <p>
                    <label asp-for="ArrivalTime">Arrival time:</label>
                    <input class="form-control" type = "time" data-val = "true" asp-for="ArrivalTime" />
                </p>
            </div>
            <div class="form-group">
                <p>
                <label>Request Parking?</label>
                    <select asp-for="WillAttend">
                        <option value="">Choose an option</option>
                        <option value="true">Yes.</option>
                        <option value="false">No.</option>
                    </select>
                </p>
            </div>
            <div class="text-center">
                <button class ="btn btn-primary" type="submit">Submit Rsvp</button>
            </div>
        </form>
    </div>
</body>
</html>